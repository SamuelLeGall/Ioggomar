{
  "name": "electron-vue-vite",
  "version": "2.0.0",
  "description": "clean architecture & vuejs & electron",
  "private": true,
  "scripts": {
    "vuejs:dev": "cd ioggomarApp/src/vuejs && vite",
    "vuejs:build": "cd ioggomarApp/src/vuejs && vue-tsc --noEmit && vite build && electron-builder",
    "vuejs:lint": "cd ioggomarApp/src/vuejs && .\\node_modules\\.bin\\eslint --ext .js,.vue,.ts app --max-warnings=4",
    "vuejs:test": "cd ioggomarApp/src/vuejs && .\\node_modules\\.bin\\vitest",
    "vuejs:test:run": "cd ioggomarApp/src/vuejs && .\\node_modules\\.bin\\vitest run",
    "vuejs:coverage": "cd ioggomarApp/src/vuejs && .\\node_modules\\.bin\\vitest run --coverage"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run vuejs:lint",
      "pre-push": "npm run vuejs:test"
    }
  },
  "keywords": [
    "electron",
    "rollup",
    "vite",
    "vue3",
    "vue"
  ]
}
